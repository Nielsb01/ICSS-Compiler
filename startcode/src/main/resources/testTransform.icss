LinkColor := #ff0000;
ParWidth := 500px;
AdjustColor := TRUE;
UseLinkColor := FALSE;

p {
	width: ParWidth;
	if[AdjustColor] {
	    color: #124532;
	    if[UseLinkColor]{
	        background-color: LinkColor;
	    } else {
	        background-color: #000000;
	    }
	}
	height: 20px;
	if[AdjustColor] {
	    color: #666666;
	    if[UseLinkColor]{
	        background-color: LinkColor;
	    } else {
	        background-color: #999999;
	    }
	}
}
